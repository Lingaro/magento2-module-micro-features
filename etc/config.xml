<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <catalog>
            <downloadable>
                <show_in_account>1</show_in_account>
            </downloadable>
            <frontend>
                <enable_comparison>1</enable_comparison>
                <enable_upsert_qty>0</enable_upsert_qty>
            </frontend>
        </catalog>
        <login_as_customer>
            <general>
                <shopping_assistance_checkbox_needed>1</shopping_assistance_checkbox_needed>
            </general>
        </login_as_customer>
        <checkout>
            <options>
                <always_expand_items_block>0</always_expand_items_block>
            </options>
        </checkout>
    </default>
</config>
